{
  "manifest_version": 3,
  "name": "Clio satelite",
  "version": "1.1",
  "description": "Expanding Creatio capabilities for professionals",
  "permissions": ["scripting", "activeTab", "tabs", "storage", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*shell/", "*://*/*Shell/", "*://*/*SHELL/", "*://*/*sHELL/"],
      "exclude_matches": ["*://*.work.creatio.com/*"],
      "css": ["styles/shell.css"],
      "js": ["content.js"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["*://*.work.creatio.com/*"],
      "css": ["styles/login.css"],
      "js": ["login/login-events.js", "login/login.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "scripts/*", "icon48.png", "icon128.png", "docs/hotkeys.html", "docs/dynamic-hotkeys.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}